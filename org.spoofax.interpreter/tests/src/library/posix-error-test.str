module posix-error-test
imports sunit posix-error

strategies

  main = 
    test-suite(!"posix-error-test",
      strerror-tests
    ; perror-tests
    )

  strerror-tests =
    apply-and-check(!"strerror on EXDEV", strerror, EXDEV, debug)

  perror-tests =
      where(try(<close> 200))
    ; apply-test(!"perror 1", perror, !"foo")
    ; apply-test(!"perror 2", perror, !())
