<project name="interpreter" default="compile" basedir=".">

    <property name="compiler.debug" value="on"/>

    <property file="build.properties"/>

    <property name="src.dir" value="../src"/>
    <property name="lib.dir" value="../ext"/>
    <property name="build.dir" value=".."/>
    <property name="classes.dir" value="${build.dir}/bin"/>
    <property name="jar.file" value="interpreter-${version}.jar"/>
    <property name="test.out.dir" value="../tests/output"/>
    <property name="haltunittest" value="no"/>

    <path id="classpath">
        <fileset dir="${lib.dir}">
            <include name="junit-3.8.1.jar"/>
            <include name="ant-junit-1.6.5.jar"/>
        </fileset>
    </path>

    <target name="init">
        <mkdir dir="${classes.dir}"/>
    </target>

    <!-- ############################ Compile ############################ -->
    <target name="compile" depends="init">
        <mkdir dir="${classes.dir}"/>
        <javac
          srcdir="${src.dir}"
          destdir="${classes.dir}"
          nowarn="on"
          debug="${compiler.debug}">
            <classpath refid="classpath"/>
        </javac>

    </target>

    <!-- ############################ Jar ############################ -->
    <target name="jar" depends="compile">
        <jar jarfile="${build.dir}/${jar.file}"
             basedir="${classes.dir}"
             includes="org/spoofax/**"
             excludes="org/spoofax/interpreter/test/**"/>
    </target>

    <!-- ############################ Clean ############################ -->
    <target name="clean">
        <delete dir="${classes.dir}"/>
    </target>

    <target name="fullclean" depends="clean">
        <delete file="${build.dir}/${jar.file}"/>
        <delete dir="${test.out.dir}"/>
    </target>


    <!-- ############################ Tests ############################ -->
    <taskdef name="junit" classname="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
        <classpath refid="classpath"/>
    </taskdef>
	
    <target name="check" depends="jar">
        <mkdir dir="${test.out.dir}"/>
        <junit printsummary="yes" fork="no" haltonfailure="no">
            <classpath>
                <path refid="classpath"/>
                <pathelement location="${build.dir}/${jar.file}"/>
            </classpath>
            <formatter type="plain"/>
            <test name="org.spoofax.interpreter.test.language.TestBuild" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestClosure" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestCongruence" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestDefinition" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestGuard" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestHigherOrderParameters" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestMatch" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestOverloading" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestScoping" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestTermConstruction" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestTermDeconstruction" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.language.TestTraversals" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.library.LibraryTest" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
            <test name="org.spoofax.interpreter.test.library.BasicLibraryTest" todir="${test.out.dir}" haltonfailure="${haltunittest}"/>
        </junit>
    </target>

</project>


