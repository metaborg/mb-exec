<project name="spoofax-aterm" default="jar" xmlns:ivy="antlib:org.apache.ivy.ant">
	
    <import file="../common.xml" />

    <target name="compile" depends="resolve" description="--> compile the project">
        <echo message="Remember to run fetch.sh before building" />
        <mkdir dir="${build.dir}/classes" />
        <javac srcdir="${src.dir}" destdir="${build.dir}/classes" classpathref="lib.path.id">
            <exclude name="org/spoofax/interpreter/test/**" />
        </javac>
    </target>

   <target name="install" depends="jar" description="--> install the project into prefix">
        <mkdir dir="${prefix}/bin" />
        <mkdir dir="${prefix}/share/java" />
        <mkdir dir="${prefix}/share/spoofax-ecj-adapter" />

<!--
        <copy todir="${prefix}/share/spoofax-interpreter" >
            <fileset dir="share" />
        </copy>
-->
        <copy todir="${prefix}/share/java">
            <fileset dir="${lib.dir}/" />
        </copy>

        <copy file="build/${jarname}-${version}.jar" todir="${prefix}/share/java" />

        <copy file="ecj-shell" todir="${prefix}/bin" />
        <chmod perm="a+x" file="${prefix}/bin/ecj-shell" />

        <copy file="ecj-parse-java" todir="${prefix}/bin" />
        <chmod perm="a+x" file="${prefix}/bin/ecj-parse-java" />
   </target>

</project>
