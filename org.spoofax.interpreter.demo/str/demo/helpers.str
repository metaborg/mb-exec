module helpers
imports
  lib

strategies

  dir-topdown(s) =
      ?base
    ; readdir 
    ; filter(not(?".") ; not(?".."))
    ; map({ x, y: ( x -> <concat-strings> [ base, "/", x ])}) => files
    ; <filter({ x: ?x ; filemode ; not(isdir) ; !x })
      ; filter(s)> files => r
    ; <filter({ x: ?x ; filemode ; isdir ; !x })
      ; map(dir-topdown(s))> files => r'
    ; <concat> [ r, r' ]
  
