module simpler-traversal-test
imports sunit simple-traversal
signature
  constructors
    F : Term * Term -> Term
    G : Term * Term -> Term
    A : Term 
    B : Term
strategies

  main = 
    test-suite(!"simpler-traversal-test",
      test2
    )

  f(x) = F(x,id)

  test2 =
    apply-test(!"test2"
	, leaves(!A, all(fail))
	, !F(G(B,F(A,B)),F(B,A))
	, !F(G(A,F(A,A)),F(A,A))
	);
    apply-test(!"test2"
	, leaves(!A, all(fail), f)
	, !F(G(B,F(B,B)),F(B,B))
	, !F(G(A,F(A,B)),F(B,B))
	)